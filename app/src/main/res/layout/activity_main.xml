        <ru.unfortunately.school.tictactoe.GridItemView
            android:layout_margin="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ru.unfortunately.school.tictactoe.GridItemView
            android:layout_margin="@dimen/default_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ru.unfortunately.school.tictactoe.GridItemView
            android:layout_margin="@dimen/default_margin"
